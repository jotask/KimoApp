<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_kanal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.github.jotask.kimo.Kanals">


    <Button
            android:text="@string/finally_newOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/updateKanal"
            android:elevation="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

    <TextView
            android:text="0 days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sinceLastKanal"
            android:textSize="@dimen/since_last"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/updateKanal"
            android:layout_centerHorizontal="true"
            android:id="@+id/counterKanal"/>

    <TextView
            android:text="since last"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewKanal"
            android:textSize="@dimen/since_last"
            android:textAlignment="center"
            android:layout_below="@+id/sinceLastKanal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <TextView
            android:text="Kanal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2Kanal"
            android:textSize="@dimen/since_last"
            android:textAlignment="center"
            android:layout_below="@+id/textViewKanal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

</RelativeLayout>
